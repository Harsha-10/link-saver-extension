{
    "manifest_version": 3,
    "name": "Link Saver",
    "version": "1.0.0",
    "description": "Easily save, manage, and share your links with just a click",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"]
        }
    ],
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "activeTab"
    ],
    "commands": {
        "trigger_button_click": {
            "suggested_key": {
                "default": "Ctrl+B"
            },
            "description": "Trigger a button click"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}

